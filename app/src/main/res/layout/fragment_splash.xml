<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151E28"
    tools:context=".common.SplashFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="167dp"
        android:layout_height="167dp"
        android:scaleType="center"
        android:scaleX="2"
        android:scaleY="2"
        app:srcCompat="@drawable/ic_eventmelon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457" />

    <TextView
        android:id="@+id/greeting_2_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_bold"
        android:text="event"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:lineHeight="54dp" />

    <TextView
        android:id="@+id/date_card_home"
        android:layout_width="117dp"
        android:layout_height="59dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins"
        android:text="melon"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        app:layout_constraintStart_toEndOf="@+id/greeting_2_home"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:lineHeight="54dp" />
</androidx.constraintlayout.widget.ConstraintLayout>