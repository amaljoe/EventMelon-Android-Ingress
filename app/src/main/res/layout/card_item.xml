<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="20dp"
    android:layout_marginBottom="20dp"
        android:id="@+id/card1"
        app:cardElevation="10dp"
        android:layout_width="201dp"
        android:layout_height="280dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_card_home"
                android:layout_width="201dp"
                android:layout_height="201dp"
                android:layout_margin="0dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/event_poster"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/date_card_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_datesquare"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/carddate1"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/eventname_card_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"

                    android:fontFamily="@font/proxima_nova_bold"
                    android:maxWidth="130dp"
                    android:singleLine="true"
                    android:text="@string/cardtitle1"
                    android:textColor="@color/black_main"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/host_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:maxWidth="130dp"
                    android:singleLine="true"
                    android:text="@string/cardtitle1"
                    android:textColor="#979797"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/eventname_card_home" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/host_name">

                    <TextView
                        android:id="@+id/participants_card_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:text="@string/cardpart1"
                        android:textColor="@color/teal_500"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/proxima_nova_bold"
                        android:text="@string/going"
                        android:textColor="@color/teal_500"
                        android:textSize="13sp" />


                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
